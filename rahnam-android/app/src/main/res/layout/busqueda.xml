<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:gravity="right"
            android:text="nombre"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desconectar"
            android:gravity="right"
            android:text="Salir"
            android:textSize="15dp"
            android:onClick="SalirDeLaAplicacion"
            android:layout_below="@+id/nombre"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:onClick="vuelveAlMain"/>

            <RadioGroup android:id="@+id/gruporb"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desconectar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por titulo"
                        android:id="@+id/radioButtonTitulo"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Por Usuario"
                        android:id="@+id/radioButtonUsuario" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por Categorias"
                        android:id="@+id/radioButtonCategorias"/>
            </RadioGroup>
        <EditText
        android:id="@+id/etBusqueda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:layout_below="@+id/textView"
        android:layout_weight="1"
            android:layout_alignRight="@+id/gruporb"
            android:layout_alignEnd="@+id/gruporb" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar:"
            android:id="@+id/textView"
            android:layout_below="@+id/gruporb"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/bCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="cancel"
            android:text="Atras"
            android:layout_below="@+id/etBusqueda"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buscarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="clickMe"
            android:text="Buscar"
            android:layout_below="@+id/etBusqueda"
            android:layout_toRightOf="@+id/bCancel"
            android:layout_toEndOf="@+id/bCancel" />
        <ListView
            android:id="@android:id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bCancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>