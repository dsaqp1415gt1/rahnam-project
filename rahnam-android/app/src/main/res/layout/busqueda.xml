<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:gravity="right"
            android:text="nombre"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desconectar"
            android:gravity="right"
            android:text="Salir"
            android:textSize="15dp"
            android:onClick="SalirDeLaAplicacion"
            android:layout_below="@+id/nombre"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por titulo"
            android:id="@+id/radioButtonTitulo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/header"
            android:layout_toLeftOf="@+id/radioButtonUsuario"
            android:layout_toStartOf="@+id/radioButtonUsuario" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Usuario"
            android:id="@+id/radioButtonUsuario"
            android:layout_weight="0.12"
            android:layout_above="@+id/textView"
            android:layout_toLeftOf="@+id/radioButtonCategorias"
            android:layout_toStartOf="@+id/radioButtonCategorias" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Categorias"
            android:id="@+id/radioButtonCategorias"
            android:layout_weight="0.12"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/radioButtonUsuario"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar:"
            android:id="@+id/textView"
            android:layout_below="@+id/radioButtonTitulo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/etBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/radioButtonCategorias"
            android:layout_alignEnd="@+id/radioButtonCategorias" />

        <Button
            android:id="@+id/bCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="cancel"
            android:text="Atras"
            android:layout_below="@+id/etBusqueda"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buscarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="clickMe"
            android:layout_above="@android:id/list"
            android:layout_toRightOf="@+id/bCancel"
            android:layout_toEndOf="@+id/bCancel"
            android:text="Buscar"/>
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bCancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>