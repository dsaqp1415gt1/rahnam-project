<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:gravity="right"
            android:text="nombre"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desconectar"
            android:gravity="right"
            android:text="Salir"
            android:textSize="15dp"
            android:onClick="SalirDeLaAplicacion"
            android:layout_below="@+id/nombre"/>
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:onClick="vuelveAlMain"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/ImageView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/header"
            android:layout_toRightOf="@+id/TituloDeLaFoto"
            android:layout_toEndOf="@+id/TituloDeLaFoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TituloDeLaFoto"
            android:gravity="fill_horizontal"
            android:text="Titulo:"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ImageView"/>

        <EditText
            android:id="@+id/etTituloDeLaFoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:layout_below="@+id/TituloDeLaFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Descripcion"
            android:gravity="fill_horizontal"
            android:text="Descripción:"
            android:textSize="15dp"
            android:layout_below="@+id/etTituloDeLaFoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:layout_below="@+id/Descripcion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cátegoria"
            android:gravity="fill_horizontal"
            android:text="Cátegorias:"
            android:textSize="15dp"
            android:layout_below="@+id/etDescripcion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="startLista"/>

        <EditText
            android:id="@+id/etCategorias"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:layout_below="@+id/Cátegoria"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras"
            android:id="@+id/BotonVolverAtras"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="8dp"
            android:layout_above="@+id/etCategorias"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cámara"
            android:id="@+id/BotonInvocaCamara"
            android:onClick="activaLaCamara"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/header"
            android:layout_alignEnd="@+id/header"
            android:layout_above="@+id/etCategorias"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/BotonGuardar"
            android:onClick="EnviarParametros"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/etCategorias"
            android:layout_alignEnd="@+id/etCategorias"
            android:layout_above="@+id/etCategorias"/>

    </RelativeLayout>
</ScrollView>