<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:gravity="right"
            android:text="nombre"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desconectar"
            android:gravity="right"
            android:text="Salir"
            android:textSize="15dp"
            android:onClick="SalirDeLaAplicacion"
            android:layout_below="@+id/nombre"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:onClick="vuelveAlMain"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/FotoPerfil"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NombreUsuario"
            android:text="NombreDelUsuario"
            android:textSize="25dp"
            android:layout_alignTop="@+id/FotoPerfil"
            android:layout_toRightOf="@+id/FotoPerfil"
            android:layout_toEndOf="@+id/FotoPerfil" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toma una foto"
            android:id="@+id/BotonTomarFoto"
            android:onClick="entrarActividadTomaFoto"
            android:textSize="10dp"
            android:layout_below="@+id/NombreUsuario"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:id="@+id/android:list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BotonTomarFoto"
            android:layout_above="@+id/BotonBusqueda" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busqueda"
            android:id="@+id/BotonBusqueda"
            android:onClick="ActivarBusqueda"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/BotonTomarFoto"
            android:layout_alignEnd="@+id/BotonTomarFoto" />
    </RelativeLayout>
</ScrollView>